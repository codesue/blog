<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
  <a class="postlist-link" href="{{ post.url | url }}">
    {% if post.data.title %}
      {{ post.data.title }}
    {% else %}
      <code>{{ post.url }}</code>
    {% endif %}
  </a>
  <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
    {{ post.date | readableDate("DD") }}
  </time>
  {%- if include_excerpt %}
    <p>{{ post.data.excerpt }}</p>
  {%- endif %}
</li>
